<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/default_padding_min"
        android:paddingEnd="@dimen/default_padding_min">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/default_padding_min">

                <com.arbelkilani.bingetv.presentation.ui.view.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layoutMode="opticalBounds"
                    android:background="@color/bottom_navigation_view_icon_color_inactive"
                    android:backgroundTint="@color/bottom_navigation_view_icon_color_inactive"
                    app:cardCornerRadius="@dimen/default_card_corner_radius"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder" />

                </com.arbelkilani.bingetv.presentation.ui.view.CustomCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/default_padding_min">

                <com.arbelkilani.bingetv.presentation.ui.view.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/bottom_navigation_view_icon_color_inactive"
                    android:backgroundTint="@color/bottom_navigation_view_icon_color_inactive"
                    android:layoutMode="opticalBounds"
                    app:cardCornerRadius="@dimen/default_card_corner_radius"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder" />

                </com.arbelkilani.bingetv.presentation.ui.view.CustomCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/default_padding_min">

                <com.arbelkilani.bingetv.presentation.ui.view.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layoutMode="opticalBounds"
                    app:cardCornerRadius="@dimen/default_card_corner_radius"
                    android:background="@color/bottom_navigation_view_icon_color_inactive"
                    android:backgroundTint="@color/bottom_navigation_view_icon_color_inactive"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder" />

                </com.arbelkilani.bingetv.presentation.ui.view.CustomCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/default_padding_min">

                <com.arbelkilani.bingetv.presentation.ui.view.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layoutMode="opticalBounds"
                    app:cardCornerRadius="@dimen/default_card_corner_radius"
                    android:background="@color/bottom_navigation_view_icon_color_inactive"
                    android:backgroundTint="@color/bottom_navigation_view_icon_color_inactive"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder" />

                </com.arbelkilani.bingetv.presentation.ui.view.CustomCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/default_padding_min">

                <com.arbelkilani.bingetv.presentation.ui.view.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layoutMode="opticalBounds"
                    app:cardCornerRadius="@dimen/default_card_corner_radius"
                    android:background="@color/bottom_navigation_view_icon_color_inactive"
                    android:backgroundTint="@color/bottom_navigation_view_icon_color_inactive"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder" />

                </com.arbelkilani.bingetv.presentation.ui.view.CustomCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/default_padding_min">

                <com.arbelkilani.bingetv.presentation.ui.view.CustomCardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layoutMode="opticalBounds"
                    app:cardCornerRadius="@dimen/default_card_corner_radius"
                    android:background="@color/bottom_navigation_view_icon_color_inactive"
                    android:backgroundTint="@color/bottom_navigation_view_icon_color_inactive"
                    app:layout_constraintDimensionRatio="2:3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder" />

                </com.arbelkilani.bingetv.presentation.ui.view.CustomCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>


</com.facebook.shimmer.ShimmerFrameLayout>