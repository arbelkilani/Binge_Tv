<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="statisticsEntity"
            type="com.arbelkilani.bingetv.domain.entities.profile.StatisticsEntity" />

        <variable
            name="viewModel"
            type="com.arbelkilani.bingetv.presentation.viewmodel.profile.ProfileViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".presentation.ui.fragments.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                app:cardCornerRadius="@dimen/default_card_corner_radius"
                app:contentPadding="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_next_regular"
                        android:text="You have seen a total of"
                        android:textColor="@color/details_titles_text_color"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_min"
                        android:fontFamily="@font/avenir_next_demi_bold"
                        android:textColor="@color/details_titles_text_color"
                        android:textSize="@dimen/titles_text_size"
                        custom:count_value="@{statisticsEntity.episodeCount}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_min"
                        android:fontFamily="@font/avenir_next_regular"
                        android:text="episodes"
                        android:textColor="@color/details_titles_text_color"
                        android:textSize="@dimen/small_text_size" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                app:cardCornerRadius="@dimen/default_card_corner_radius"
                app:contentPadding="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_next_regular"
                        android:text="Total time spen watching Tv shows"
                        android:textColor="@color/details_titles_text_color"
                        android:textSize="@dimen/small_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin_min"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_min"
                                android:fontFamily="@font/avenir_next_demi_bold"
                                android:textColor="@color/details_titles_text_color"
                                android:textSize="@dimen/titles_text_size"
                                custom:count_value="@{statisticsEntity.years}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_min"
                                android:fontFamily="@font/avenir_next_regular"
                                android:text="years"
                                android:textColor="@color/details_titles_text_color"
                                android:textSize="@dimen/small_text_size" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/details_titles_text_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_min"
                                android:fontFamily="@font/avenir_next_demi_bold"
                                android:textColor="@color/details_titles_text_color"
                                android:textSize="@dimen/titles_text_size"
                                custom:count_value="@{statisticsEntity.months}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_min"
                                android:fontFamily="@font/avenir_next_regular"
                                android:text="months"
                                android:textColor="@color/details_titles_text_color"
                                android:textSize="@dimen/small_text_size" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/details_titles_text_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_min"
                                android:fontFamily="@font/avenir_next_demi_bold"
                                android:textColor="@color/details_titles_text_color"
                                android:textSize="@dimen/titles_text_size"
                                custom:count_value="@{statisticsEntity.days}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_margin_min"
                                android:fontFamily="@font/avenir_next_regular"
                                android:text="days"
                                android:textColor="@color/details_titles_text_color"
                                android:textSize="@dimen/small_text_size" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</layout>