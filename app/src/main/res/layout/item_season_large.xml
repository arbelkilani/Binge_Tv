<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="seasonEntity"
            type="com.arbelkilani.bingetv.domain.entities.season.SeasonEntity" />

        <variable
            name="seasonClickListener"
            type="com.arbelkilani.bingetv.presentation.listeners.OnSeasonClickListener" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@android:color/transparent"
        android:onClick="@{() -> seasonClickListener.onSeasonItemClicked(seasonEntity)}">

        <!-- content -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?attr/selectableItemBackground"
            android:layoutMode="opticalBounds"
            app:cardCornerRadius="@dimen/item_season_large_corner_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:paddingStart="@dimen/default_padding"
                android:paddingTop="@dimen/default_padding"
                android:paddingEnd="@dimen/default_padding_min"
                android:paddingBottom="@dimen/default_padding_min">

                <!-- season number -->
                <TextView
                    android:id="@+id/tv_season_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_next_demi_bold"
                    android:text="@{String.valueOf(seasonEntity.name)}"
                    android:textColor="@color/details_titles_text_color"
                    android:textSize="@dimen/titles_text_size" />

                <!-- progress layout -->
                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_season_number"
                    android:layout_marginTop="@dimen/default_margin_min"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight=".8"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/rounded_corners_progress_bar"
                            custom:count="@{seasonEntity.episodeCount}"
                            custom:watched="@{seasonEntity.watchedCount}" />

                        <ImageView
                            android:id="@+id/rb_watched"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:background="?attr/actionBarItemBackground"
                            android:isSelected="@{seasonEntity.watched}"
                            android:onClick="@{(view) -> seasonClickListener.onWatchedSeasonClicked(view, seasonEntity)}"
                            android:src="@drawable/selector_radio_button"
                            android:visibility="@{seasonEntity.futureEpisodeCount == 0 ? View.VISIBLE : View.INVISIBLE}" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_episode_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_next_regular"
                        android:textColor="@color/details_titles_text_color"
                        android:textSize="@dimen/small_text_size"
                        custom:count="@{seasonEntity.episodeCount}"
                        custom:watched="@{seasonEntity.watchedCount}" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_air_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress_layout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/default_margin_min"
                    android:fontFamily="@font/avenir_next_regular"
                    android:text="@{seasonEntity.airDate}"
                    android:textColor="@color/details_titles_text_color"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_season_number"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/default_margin_min"
                    android:ellipsize="end"
                    android:fontFamily="@font/avenir_next_regular"
                    android:maxLines="2"
                    android:text="@{seasonEntity.overview}"
                    android:textColor="@color/details_titles_text_color"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="gone"
                    tools:text="@tools:sample/lorem/random" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- poster -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/poster_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:orientation="vertical"
            android:scaleX=".86"
            android:scaleY=".92">

            <com.arbelkilani.bingetv.presentation.ui.view.CustomCardView
                android:id="@+id/card_view"
                android:layout_width="110dp"
                android:layout_height="0dp"
                android:layoutMode="opticalBounds"
                app:cardCornerRadius="@dimen/item_season_large_corner_radius"
                app:layout_constraintDimensionRatio="2:3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder"
                    custom:size_poster="@{@string/w185}"
                    custom:src_poster="@{seasonEntity.poster}" />

            </com.arbelkilani.bingetv.presentation.ui.view.CustomCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</layout>